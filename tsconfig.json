{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "declaration": true,
      "pretty": true,
      "rootDir": "src",
      "sourceMap": false,
      "strict": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "outDir": "dist",
      "lib": [
        "ES2022",
        "dom",
        "dom.iterable"
      ],
      "importHelpers": true
    },
    "include": [
      "src",
      "tests"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts"
    ]
  }